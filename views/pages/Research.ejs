<!DOCTYPE html>
<html lang="<%= lang === 'eng' ? 'en' : 'ko' %>" class="index-page">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Research - OS LAB</title>
    <link rel="icon" href="/images/Favi.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/Home.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/Research.css" />
  </head>
  <body>
    <%- include('../partials/header') %>
    <div
      style="
        width: 100vw;
        display: flex;
        flex-direction: column;
        align-items: center;
      "
      class="mt-3 space-y-7 asdf"
    >
      <!-- 서버 전송 researchItems가 없으면 research-lang.js에서 채워집니다 -->
      <div id="researchContainer">
        <% var items = (typeof researchItems !== 'undefined') ? researchItems :
        []; %> <% items.forEach(function(item){ %>
        <div
          class="max-w-5xl glow"
          style="
            border-radius: 8px;
            display: flex;
            width: 75vw;
            height: 300px;
            background-color: #fff;
            margin-bottom: 1rem;
          "
        >
          <img
            src="<%= item.img %>"
            alt="<%= item.title[lang] %>"
            style="
              border-top-left-radius: 8px;
              border-bottom-left-radius: 8px;
              width: 300px;
              object-fit: cover;
            "
          />
          <div
            style="
              display: flex;
              flex-direction: column;
              justify-content: center;
              align-items: flex-start;
              padding: 0 2rem;
            "
          >
            <p class="font-bold text-2xl mb-3"><%= item.title[lang] %></p>
            <% if(item.date){ %>
            <p class="card-text">
              <small class="text-muted"><%= item.date %></small>
            </p>
            <% } %>
            <p class="leading-6"><%- item.content[lang] %></p>
            <% if(item.link && item.link[lang]){ %>
            <a href="<%= item.link[lang] %>" class="btn btn-primary">
              <%= lang === 'eng' ? 'View Details' : '자세히 보기' %>
            </a>
            <% } %>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <%- include('../partials/footer') %>
    <script src="/js/cookies.js"></script>
    <script src="/js/language-utils.js"></script>
    <script src="/js/navbar.js"></script>
    <script src="/js/research-lang.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
