<!DOCTYPE html>
<html lang="ko" class="index-page">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>OS LAB</title>
    <link rel="icon" href="/images/Favi.ico" type="image/x-icon" />
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/Home.css" />
    <!-- Home.css 추가 -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('../partials/header') %>

    <div class="container-fluid p-0">
      <div class="slogan-box">
        <h3 id="sloganTopH3">Loading...</h3>
        <h2>
          <span class="line1" id="sloganTopLine1"
            >자바스크립트를 사용해 주세요</span
          >
          <br />
          <span class="line2" id="sloganTopLine2"
            >Please enable JavaScript</span
          >
        </h2>
      </div>
      <div class="aaa">
        <div class="image-container">
          <div class="overlay"></div>
          <div
            class="image-box"
            style="background-image: url('/images/Home/main-1.jpg')"
          ></div>
          <div
            class="image-box"
            style="background-image: url('/images/Home/main-2.jpg')"
          ></div>
          <div
            class="image-box"
            style="background-image: url('/images/Home/main-3.jpg')"
          ></div>
          <div
            class="image-box"
            style="background-image: url('/images/Home/main-4.jpg')"
          ></div>
          <div
            class="image-box"
            style="background-image: url('/images/Home/main-5.jpg')"
          ></div>
        </div>
      </div>
      <div class="image-container-small d-lg-none">
        <div class="overlay"></div>
        <div
          class="image-box"
          style="background-image: url('/images/Home/main-1.jpg')"
        ></div>
        <div
          class="image-box"
          style="background-image: url('/images/Home/main-3.jpg')"
        ></div>
        <div
          class="image-box"
          style="background-image: url('/images/Home/main-4.jpg')"
        ></div>
      </div>
      <div class="d-flex justify-content-center">
        <a href="/Projects" id="viewProjectsBtn" class="view-projects-btn"
          >프로젝트 자세히 보기</a
        >
      </div>
      <div class="slogan-box">
        <h3 id="sloganMidH3">Loading...</h3>
        <h2>
          <span class="line1" id="sloganMidLine1"
            >자바스크립트를 사용해 주세요</span
          >
          <br />
          <span class="line2" id="sloganMidLine2"
            >Please enable JavaScript</span
          >
        </h2>
      </div>
      <!-- 기존의 포스트 컨테이너 -->
      <div class="post-container">
        <div
          class="post-image"
          style="background-image: url('/images/Home/content-1.jpg')"
        ></div>
        <div class="post-content">
          <div class="post-title-box">
            <h3 id="postTitle1">Loading...</h3>
          </div>
          <div class="post-body">
            <p id="postContent1">Loading...</p>
          </div>
        </div>
      </div>
      <div class="post-container">
        <div class="post-content">
          <div class="post-title-box">
            <h3 id="postTitle2">Loading...</h3>
          </div>
          <div class="post-body">
            <p id="postContent2">Loading...</p>
          </div>
        </div>
        <div
          class="post-image"
          style="background-image: url('/images/Home/content-2.jpg')"
        ></div>
      </div>
      <div class="post-container">
        <div
          class="post-image"
          style="background-image: url('/images/Home/content-3.jpg')"
        ></div>
        <div class="post-content">
          <div class="post-title-box">
            <h3 id="postTitle3">Loading...</h3>
          </div>
          <div class="post-body">
            <p id="postContent3">Loading...</p>
          </div>
        </div>
      </div>
      <div class="slogan-box">
        <h3 id="sloganBotH3">Loading...</h3>
        <h2>
          <span class="line1" id="sloganBotLine1"
            >자바스크립트를 사용해 주세요</span
          >
          <br />
          <span class="line2" id="sloganBotLine2"
            >Please enable JavaScript</span
          >
        </h2>
      </div>

      <!-- 이미지 갤러리 섹션 - 구조 간소화 -->
      <div class="image-gallery">
        <div class="gallery-container">
          <!-- 데스크탑 뷰 (4개 이미지 모두 표시) -->
          <div class="gallery-desktop">
            <div class="gallery-item">
              <img src="/images/Home/gallery-1.jpg" alt="Gallery Image 1" />
              <div class="description-circle">연구실 MT</div>
            </div>
            <div class="gallery-item">
              <img src="/images/Home/gallery-2.jpg" alt="Gallery Image 2" />
              <div class="description-circle">연구실 연합 MT</div>
            </div>
            <div class="gallery-item">
              <img src="/images/Home/gallery-3.jpg" alt="Gallery Image 3" />
              <div class="description-circle">스승의 날</div>
            </div>
            <div class="gallery-item">
              <img src="/images/Home/gallery-4.jpg" alt="Gallery Image 4" />
              <div class="description-circle">시험기간</div>
            </div>
          </div>

          <!-- 태블릿 뷰 (2개 이미지씩 슬라이드) -->
          <div class="gallery-slider tablet-slider">
            <div class="slider-wrapper">
              <div class="slider-track">
                <!-- JavaScript에서 동적으로 생성 -->
              </div>
            </div>
          </div>

          <!-- 모바일 뷰 (1개 이미지씩 슬라이드) -->
          <div class="gallery-slider mobile-slider">
            <div class="slider-wrapper">
              <div class="slider-track">
                <!-- JavaScript에서 동적으로 생성 -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../partials/footer') %>

    <script src="/js/cookies.js"></script>
    <script src="/js/nav-language.js"></script>
    <script src="/js/navbar.js"></script>
    <script src="/js/Home-lang.js"></script>
    <script src="/js/gallery-slider.js"></script>
    <!-- 새로운 JavaScript 파일 추가 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- 디버깅용 코드 추가 -->
    <script>
      // 페이지 로드 후 슬라이더 초기화 여부 확인
      document.addEventListener("DOMContentLoaded", function () {
        setTimeout(function () {
          console.log(
            "태블릿 슬라이더 내용:",
            document.querySelector(".tablet-slider .slider-track").innerHTML
          );
          console.log(
            "모바일 슬라이더 내용:",
            document.querySelector(".mobile-slider .slider-track").innerHTML
          );
        }, 1000);
      });
    </script>
  </body>
</html>
